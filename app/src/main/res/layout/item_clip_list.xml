<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    card_view:cardBackgroundColor="@color/sb_blue"
    card_view:cardCornerRadius="5dp">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">
<TextView
    android:id="@+id/tvDate"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:textSize="12sp"
    android:layout_width="wrap_content"
    android:textColor="@color/sb_red_dark"
    android:layout_height="wrap_content"
    android:text="@string/hello_world"/>


    <ImageView
        android:id="@+id/imgvType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_link_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"/>
    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvDate"
        android:layout_toRightOf="@id/imgvType"
        android:layout_toEndOf="@id/imgvType"
        android:text="@string/hello_long"
        android:ellipsize="end"
        android:maxLines="2"
        android:autoLink="web"
        android:textColorLink="@color/sb_red"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>